{% if template contains "search" %}
  {{ 'search-results-filter.js' | asset_url | script_tag }}
  <script>
    $(document).ready(function() {
      var options = {
        container: ".grid-uniform",   // replace this with the search results container class
        grid_container: ".custom-grid",   // replace with the grid class
        title_wrapper: ".custom-title",   // replace with the title class
        price_wrapper: ".money .visually-hidden"  // replace with the price class
      };

      $("#search-sort").search_sort(options);
    });
  </script>
{%endif%}
